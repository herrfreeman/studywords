<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/libItemCaption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="20dp"
        android:text="Top 100 words"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/statusText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"

        android:text="0 / 0 / 0 / 0"
        android:textSize="18sp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/libItemCaption"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/statusDone"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="10"
            android:background="#00FF00"
            />

        <View
            android:id="@+id/statusRepeat"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="20"
            android:background="#FF4D4D"
            />

        <View
            android:id="@+id/statusWait"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="30"
            android:background="#FFD147"
            />

        <View
            android:id="@+id/statusNew"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_weight="40"
            android:background="#FFFFFF"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>